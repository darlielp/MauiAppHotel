<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="15" Spacing="15">
        <!-- Titulo -->
        <Label Text="{Binding QuartoSelecionado.Descricao}"
               TextColor="{StaticResource Primary}"
               FontFamily="Bebas"
               FontSize="50"
               HorizontalTextAlignment="Center"/>

        <!-- Quantidade de Pessoas -->
        <Frame Padding="10" CornerRadius="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand"
                                   Spacing="30">
                <!-- Adultos -->
                <HorizontalStackLayout Spacing="5">
                    <Label Text="Adultos:" FontSize="16" TextColor="{StaticResource TextPrimary}"/>
                    <Label Text="{Binding QtdAdultos}" FontSize="16" TextColor="#007BFF"/>
                </HorizontalStackLayout>

                <!-- Crianças -->
                <HorizontalStackLayout Spacing="5">
                    <Label Text="Crianças:" FontSize="16" TextColor="{StaticResource TextPrimary}"/>
                    <Label Text="{Binding QtdCriancas}" FontSize="16" TextColor="#007BFF"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>


        <!-- Informações sobre hospedagem -->
        <Frame Padding="10" CornerRadius="10">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto, Auto" ColumnSpacing="10" RowSpacing="10">
                <Label Grid.Row="0" Grid.Column="0" HorizontalTextAlignment="Center" Text="Check-in" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1" HorizontalTextAlignment="Center" Text="Check-out" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="2" HorizontalTextAlignment="Center" Text="Estadia" FontAttributes="Bold"/>

                <Label Grid.Row="1" Grid.Column="0" HorizontalTextAlignment="Center" Text="{Binding DataCheckIn, StringFormat='{}{0:dd/MM/yyyy}'}" TextColor="ForestGreen"/>
                <Label Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="Center" Text="{Binding DataCheckOut, StringFormat='{}{0:dd/MM/yyyy}'}" TextColor="Red"/>
                <Label Grid.Row="1" Grid.Column="2" HorizontalTextAlignment="Center" Text="{Binding Estadia}" TextColor="#007BFF"/>
            </Grid>
        </Frame>
        
        <!-- Informações de preço -->
        <Frame Padding="10" CornerRadius="10">
            <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="5">
                <Label Text="Valor Total:" FontSize="16" TextColor="White"/>
                <Label Text="{Binding ValorTotal, StringFormat='{}{0:c}'}" FontSize="16" TextColor="ForestGreen" FontAttributes="Bold"/>
            </HorizontalStackLayout>
        </Frame>
        
        <!-- Voltar -->
        <Button Text="Voltar" BackgroundColor="{StaticResource Primary}" 
                TextColor="White" CornerRadius="10" WidthRequest="150" HorizontalOptions="Center" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>