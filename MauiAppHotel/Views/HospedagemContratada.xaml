<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    <VerticalStackLayout VerticalOptions="CenterAndExpand">
        <!-- Titulo -->
        <Label Text="Suite Super Luxo"
               TextColor="{StaticResource Primary}"
               FontFamily="Kalam"
               FontSize="50"
               HorizontalTextAlignment="Center"/>
        
        <!-- Quantidade de pessoas -->
        <Frame Margin="10">
            <HorizontalStackLayout>
                <!--- Adultos -->
                <HorizontalStackLayout>
                    <Label Text="Adultos: "/>
                    <Label Text="2" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
                <!--- Criancas -->
                <HorizontalStackLayout>
                    <Label Text="Crianças: "/>
                    <Label Text="1" TextColor="{StaticResource Primary}"/>
                </HorizontalStackLayout>
            </HorizontalStackLayout>
        </Frame>
        
        <!-- Informações sobre hospedagem -->
        <Frame Margin="10">
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto, Auto">
                <Label Grid.Row="0" Grid.Column="0" Text="Check-in"/>
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out"/>
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia"/>

                <Label Grid.Row="1" Grid.Column="0" Text="09/11/25"/>
                <Label Grid.Row="1" Grid.Column="1" Text="09/12/25"/>
                <Label Grid.Row="1" Grid.Column="2" Text="3"/>
            </Grid>
        </Frame>
        
        <!-- Informações de preço -->
        <Frame Margin="10">
            <HorizontalStackLayout>
                <Label Text="Valor Total:"/>
                <Label Text="R$ 750,00"/>
            </HorizontalStackLayout>
        </Frame>
        
        <!-- Voltar -->
        <Button Text="Voltar" HorizontalOptions="Center" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>