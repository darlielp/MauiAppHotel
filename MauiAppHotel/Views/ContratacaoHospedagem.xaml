<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="10"
                         Spacing="10">

        <Label Text="Cálcular Diária"
               FontFamily="Bebas"
               FontSize="50"
               TextColor="{StaticResource Primary}" 
               HorizontalOptions="Center"/>

        <Frame Padding="10">
            <VerticalStackLayout>
                <!-- Seleciona a quantidade de pessoas -->
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, auto, auto"
                      RowSpacing="10">
                    <!-- Adultos -->
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:" 
                           FontSize="16"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"
                           VerticalOptions="Center"
                           Margin="0,0,10,0"
                           />

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                    
                    <!-- Criancas -->
                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:" 
                           FontSize="16"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"
                           VerticalOptions="Center"
                           Margin="0,0,10,0"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" 
                             />
                </Grid>

                <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray300}" Margin="0, 15"/>

                <!-- Selecionar suite -->
                <VerticalStackLayout>

                    <Label Text="Escolha sua Suíte"
                            TextTransform="Uppercase"
                            FontSize="Subtitle"
                            TextColor="{StaticResource Primary}"
                            FontAttributes="Bold"
                            Margin="0, 10, 0, 5"
                            />

                    <Picker x:Name="pck_quarto"
                            Title="Selecione sua Acomodação" 
                            ItemDisplayBinding="{Binding Descricao}"/>
                </VerticalStackLayout>

                <BoxView HeightRequest="1" BackgroundColor="{StaticResource Gray300}" Margin="0, 15"/>

                <!-- Seleciona perido da hospedagem -->
                <VerticalStackLayout Spacing="10">

                    <Label Text="Período da Estadia"
                            TextTransform="Uppercase"
                            FontSize="Subtitle"
                            TextColor="{StaticResource Primary}"
                            FontAttributes="Bold"
                            Margin="0, 10, 0, 5"/>

                    <Grid ColumnDefinitions="Auto, *" 
                          RowDefinitions="Auto, Auto"  
                          ColumnSpacing="10" 
                          RowSpacing="10"
                          Margin="0,0,0,20">

                        <!-- Check-in -->
                        <Label Grid.Row="0" Grid.Column="0" 
                               Text="Check-in:" 
                               VerticalOptions="Center" 
                               FontSize="16"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" 
                                    x:Name="dtpck_checkin"
                                    DateSelected="dtpck_checkin_DateSelected"
                                    Format="dd/MM/yyyy"
                                    HorizontalOptions="End" />

                        <!-- Check-out -->
                        <Label Grid.Row="1" Grid.Column="0" 
                               Text="Check-out:" 
                               VerticalOptions="Center" 
                               FontSize="16"/>
                        <DatePicker Grid.Row="1" Grid.Column="1" 
                                    x:Name="dtpck_checkout"
                                    Format="dd/MM/yyyy"
                                    HorizontalOptions="End" />
                    </Grid>
                </VerticalStackLayout>
                               
                <!-- Botao avancar -->
                <Button Text="Avançar"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                Clicked="Button_Clicked"
                />
                
                <!-- Botao Sobre -->
                <Button Text="Sobre"
                BackgroundColor="Transparent"
                TextColor="{StaticResource Primary}"
                FontAttributes="Bold"
                Clicked="Sobre_Clicked"/>

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>